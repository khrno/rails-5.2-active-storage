<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="<%= admin_root_path %>">Blog Admin</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= @current_tab == 'posts' ? 'active' : '' %>">
            <a class="nav-link" href="<%= admin_posts_path %>">Posts</a>
          </li>
          <li class="nav-item <%= @current_tab == 'categories' ? 'active' : '' %>">
            <a class="nav-link" href="<%= admin_categories_path %>">Categories</a>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>