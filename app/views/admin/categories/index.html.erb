<div id="dashboard" class="container">
  <div class="jumbotron">
    <h1 class="display-4">Categories</h1>
    <p class="lead">This is a simple categories list on which you can manage the categories of your Blog Application.</p>
    <hr class="my-4">
    <p>To add a new category, please click on the below button</p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="<%= new_admin_category_path %>" role="button">Add</a>
    </p>
  </div>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col" colspan="2">Manage</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'edit', edit_admin_category_path(id: category.id) %></td>
          <td><%= link_to 'delete', admin_category_path(id: category.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>