<div class="container">
  <h1>New Category</h1>
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: 'Category Name' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: "3" %>
    </div>
    <%= f.button :Create, class: "btn btn-primary" %>
  <% end %>
</div>